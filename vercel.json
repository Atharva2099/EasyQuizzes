{
    "version": 2,
    "builds": [
      { "src": "backend/app/main.py", "use": "@vercel/python" },
      { "src": "frontend/**", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/upload", "dest": "backend/app/main.py" },
      { "src": "/generate_flashcards", "dest": "backend/app/main.py" },
      { "src": "/(.*)", "dest": "frontend/$1" }
    ]
  }