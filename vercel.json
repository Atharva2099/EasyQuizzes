{
  "version": 2,
  "builds": [
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/*/",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/upload",
      "dest": "/api"
    },
    {
      "src": "/generate_flashcards",
      "dest": "/api"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
